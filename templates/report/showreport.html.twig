{% extends 'base.html.twig' %}

{% block title %}Détail du signalement{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Administration</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_reports') }}">Signalements</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Détail du signalement</li>
                </ol>
            </nav>

            <div class="card mb-4">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Signalement #{{ report.id }}</h2>
                    <span class="badge bg-light text-dark">
                        Signalé le {{ report.reportedAt|date('d/m/Y à H:i') }}
                    </span>
                </div>
                <div class="card-body">
                    <h3>Informations du signalement</h3>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong>Motif :</strong> {{ report.reason }}</p>
                            <p><strong>Signalé par :</strong> {{ report.user.username }}</p>
                            <p><strong>Statut :</strong> 
                                {% if report.isHandled %}
                                    <span class="badge bg-success">Traité</span>
                                {% else %}
                                    <span class="badge bg-warning">En attente</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <h3>Annonce concernée</h3>
                    <div class="card mb-4">
                        <div class="card-header {% if report.annonce.isLocked %}bg