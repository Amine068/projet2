{% extends 'base.html.twig' %}

{% block title %}Liste des messages{% endblock %}

{% block body %}


<div class="flex flex-col items-center relative w-2xl min-h-screen mx-auto">

    {% for message in messages %}
        {% if message.usersender %}
            
        {% endif %}
        <p>{{ message.text }} </p>
    {% endfor %}

    <div class="absolute bottom-0 m-2">
        {{ form_start(form) }}
        {{ form_row(form.text) }}
        <button type="submit" class="p-2 text-white bg-[#004C5E] rounded-md m-2">Envoyer</button>
        {{ form_end(form) }}
    </div>
</div>



{% endblock %}
